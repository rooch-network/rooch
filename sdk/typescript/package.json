{
  "name": "rooch",
  "author": "rooch.network",
  "version": "0.0.1",
  "description": "Rooch SDK",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.6.6",
  "type": "module",
  "scripts": {
    "clean": "rm -rf tsconfig.tsbuildinfo ./dist",
    "dev": "vite",
    "build": "tsc && vite build",
    "doc": "typedoc",
    "vitest": "vitest",
    "test": "pnpm test:unit",
    "test:unit": "vitest run unit __tests__",
    "test:e2e": "wait-on http://127.0.0.1:9123 -l --timeout 120000 && vitest run e2e",
    "test:e2e:nowait": "vitest run e2e",
    "prepare:e2e": "cargo run --bin rooch",
    "prepublishOnly": "pnpm build",
    "prettier:check": "prettier -c --ignore-unknown .",
    "prettier:fix": "prettier -w --ignore-unknown .",
    "eslint:check": "eslint --max-warnings=0 .",
    "eslint:fix": "pnpm run eslint:check --fix",
    "lint": "pnpm run eslint:check && pnpm run prettier:check",
    "lint:fix": "pnpm run eslint:fix && pnpm run prettier:fix",
    "gen:client": "node ./tools/generator/main.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rooch-network/rooch.git"
  },
  "homepage": "https://github.com/rooch-network/rooch",
  "bugs": {
    "url": "https://github.com/rooch-network/rooch/issues"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/rooch.cjs",
  "module": "./dist/rooch.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/rooch.js",
      "require": "./dist/rooch.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "Rooch",
    "Rooch Network",
    "Move"
  ],
  "devDependencies": {
    "@iarna/toml": "^2.2.5",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/node": "^18.15.11",
    "@types/ws": "^8.5.5",
    "eslint": "8.23.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "msw": "^1.2.1",
    "prettier": "^3.0.0",
    "ts-retry-promise": "^0.7.0",
    "tsx": "^3.12.7",
    "typedoc": "^0.24.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.3",
    "vite-plugin-dts": "^3.3.1",
    "vitest": "^0.32.0",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@noble/hashes": "^1.3.0",
    "@open-rpc/client-js": "^1.8.1",
    "@scure/bip39": "^1.2.0",
    "@suchipi/femver": "^1.0.0",
    "ejs": "^3.1.9",
    "events": "^3.3.0",
    "superstruct": "^1.0.3",
    "tweetnacl": "^1.0.3"
  }
}
